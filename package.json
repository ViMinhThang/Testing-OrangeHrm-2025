{
  "name": "orangehrm-cypress-tests",
  "version": "1.0.0",
  "description": "Integrated Cypress test suite for OrangeHRM and CMS testing",
  "main": "index.js",
  "scripts": {
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "cy:run:chrome": "cypress run --browser chrome",
    "cy:run:headed": "cypress run --headed",
    "test:orangehrm": "cypress run --spec 'cypress/e2e/orangehrm/**/*.cy.js'",
    "test:cms": "cypress run --spec 'cypress/e2e/cms/**/*.cy.js'",
    "test:all": "cypress run"
  },
  "keywords": ["cypress", "testing", "orangehrm", "automation"],
  "author": "Testing Team 2025",
  "license": "ISC",
  "devDependencies": {
    "cypress": "^15.7.0",
    "cypress-slow-down": "^1.3.1"
  }
}
